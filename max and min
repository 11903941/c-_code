//max and min of an array

#include<iostream>
using namespace std;
int i,n,arr[10];

max_num(){
	int max=arr[0];
	for(i=1;i<n;i++){
	if(max<arr[i]){
		max=arr[i];
	}
	}
	cout<<"max is:"<<max<<endl;
}


min_num(){
	int min=arr[0];
	for(i=1;i<n;i++){
	if(min>arr[i]){
		min=arr[i];
	}
	}
	cout<<"min is:"<<min<<endl;
}


int main(){
	cout<<"enter the element in an array"<<endl;
	cin>>n;
	for(i=0;i<n;i++){
		cin>>arr[i];
	}
	max_num();
	min_num();
	return 0;
}
